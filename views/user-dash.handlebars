<section>
<h2>Your Posts</h2>

<button type="submit" class="btn new-post-button"><a class="link" href="/userdash/new">+ New Post</a></button>
<div>
{{#if posts.length}}

  
    {{#each posts as |post|}}
      {{> post-info post}}
        <a href="/userdash/edit/{{post.id}}"><button class="button mb-5 ml-5 is-warning">edit post</button></a>
    {{/each}}


{{/if}}
</div>
</section>
  {{#if loggedIn}}
<script src="/js/logout.js"></script>
{{/if}}
<script src="/js/add-post.js"></script>