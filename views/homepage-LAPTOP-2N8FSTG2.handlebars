 <h2 class="container w-25 p-3 bg-primary text-center text-white col-4"></h2>
    <div class="container">
        <h1>Welcome to our Travel Blog</h1>
        <p></p>
    </div>
</div>

<style>
    .post-container {
        display: flex;
        justify-content: center;
        flex-direction: column;
        align-items: center;
    }
    .post {
        margin-bottom: 1em;
    }
</style>

<div class="post-container">
    {{#each posts as |post|}}
    <article class="post">
        {{> post-info post }}
    </article>
    {{else}}
    <h6 class="pb-4 has-text-centered is-italic">there are currently no posts</h6>
    {{/each}}
</div>

<div>
    {{>giphySearch}}
</div>

<footer class="footer mt-auto py-3 bg-dark">
    <div class="container text-center text-white">
        <span>&copy; 2023 TravelBlog. All rights reserved.</span>
    </div>

    {{#if loggedIn}}
    <script src="/js/logout.js"></script>
    {{/if}}
</footer>
