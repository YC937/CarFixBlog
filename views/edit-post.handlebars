<h2 class="card-header">Edit Post</h2>
    <form class="card-body edit-post-form">
        <div class="form-row">
        <label for="place" class="form-label">Place</label>
        <input name="place" type="text" value="{{post.place}}" class="form-input form-control"/>
        </div>

        <div class="form-row">
        <label class="form-label" for="description">Description</label>
        <input name="description" type="text" value="{{post.description}}" class="form-input form-control"/>
        </div>
        <button type="submit" class="btn">Update Post</button>
        <button type="button" class="delete-post-btn btn">Delete Post</button>
    </form>