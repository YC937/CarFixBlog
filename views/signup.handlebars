<section class="h-100 gradient-form" style="background-color: #eee;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-xl-10">
        <div class="card rounded-3 text-black">
          <div class="row g-0">
            <div class="col-lg-6">
              <div class="card-body p-md-5 mx-md-4">

                <div class="text-center">
                  <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/lotus.webp"
                    style="width: 185px;" alt="logo">
                  <h4 class="mt-1 mb-5 pb-1">Welcome to Travel Blog!</h4>
                </div>
                  <p>Please create your account</p>
                <form class="signup-form">
          
                  <div class="form-outline mb-4">
                    <input type="email" id="email-signup" class="form-control"
                      placeholder="Email address" />
                    <label class="form-label" for="email-signup">Email</label>
                  </div>

                  <div class="form-outline mb-4">
                    <input type="password" id="password-signup" class="form-control" />
                    <label class="form-label" for="password-signup">Password</label>
                  </div>

                  <div class="text-center pt-1 mb-5 pb-1">
                    <button class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3" type="submit">Sign
                      Up</button>
                  </div>

    <script src="/public/js/signup.js"></script>
